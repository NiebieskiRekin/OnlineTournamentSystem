{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "rootDir": "src",
    "paths": {
      "@/backend/*": ["../../apps/backend/src/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist"
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "**/packages/frontend"]
  },
  "include": ["src"]
}
